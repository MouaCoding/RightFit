<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/profile_app_bar_layout"></include>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/profile_main_layout" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Posts"
                    android:textAppearance="@android:style/TextAppearance.Material.Headline" />

                <TextView
                    android:id="@+id/more_posts"
                    android:layout_width="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_height="wrap_content"
                    android:text="More >" />

            </LinearLayout>

            <ListView
                android:id="@+id/post_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="100" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Events"
                android:textAppearance="@android:style/TextAppearance.Material.Headline" />

                <TextView
                    android:id="@+id/more_events"
                    android:layout_width="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_height="wrap_content"
                    android:text="More >" />

            </LinearLayout>

            <ListView
                android:id="@+id/event_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="@null" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shared_post_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shared Posts"
                    android:textAppearance="@android:style/TextAppearance.Material.Headline" />

                <TextView
                    android:id="@+id/more_shared_posts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="More >" />
            </LinearLayout>

            <ListView
                android:id="@+id/shared_post_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:divider="@null" />

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shared_events_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shared Events"
                    android:textAppearance="@android:style/TextAppearance.Material.Headline" />

                <TextView
                    android:id="@+id/more_shared_events"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="More >" />
            </LinearLayout>

            <ListView
                android:id="@+id/shared_event_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:divider="@null" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>