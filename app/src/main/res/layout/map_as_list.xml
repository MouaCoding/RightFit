<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/map_as_list"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/hyperlocale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:background="@drawable/button_with_border"
        android:textSize="42sp"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:text="@string/map_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/events_button"
            android:layout_weight="1"
            android:background="@drawable/blue_border"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="24sp" />

        <Button
            android:text="@string/Posts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/posts_button"
            android:layout_weight="1"
            android:background="@drawable/blue_border"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="24sp" />
    </LinearLayout>


    <LinearLayout android:orientation="horizontal"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">
        <LinearLayout android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp">

            <ListView
                android:id ="@+id/map_listview"
                android:layout_weight="100"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>