<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/message_user">

    <ImageView
        android:id="@+id/messaging_user_profile_picture"
        android:layout_width="100dp"
        android:layout_height="70dp"
        app:srcCompat="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/username"
            android:text="User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/messaging_user_profile_picture" />
        <TextView
            android:id="@+id/message_conversation_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_toEndOf="@+id/messaging_user_profile_picture" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="57dp"
        android:layout_alignBaseline="@+id/user"
        android:layout_alignBottom="@+id/user"
        android:layout_alignParentEnd="true" />

</RelativeLayout>