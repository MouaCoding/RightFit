<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom|center_horizontal"
    android:id="@+id/post_event_create"
    android:background="@drawable/top_nav_color"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/action_create_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create_post_button"
            android:layout_weight="1" />

        <Button
            android:text="@string/action_create_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create_event_button"
            android:layout_weight="1" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/post_event_create_shim_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!--
        <com.google.android.gms.maps.MapView
            android:id="@+id/primary_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
            -->

    </FrameLayout>

</LinearLayout>